<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory>

        <EditTextPreference
            app:defaultValue="@string/pref_query_default"
            app:key="pref_query"
            app:title="@string/pref_query_title"
            app:icon="@drawable/ic_search"
            app:useSimpleSummaryProvider="true" />

        <ListPreference
            app:defaultValue="0"
            app:entries="@array/period_entries"
            app:entryValues="@array/period_values"
            app:icon="@drawable/ic_period"
            app:key="pref_period"
            app:title="@string/pref_period_title"
            app:useSimpleSummaryProvider="true" />

        <SwitchPreferenceCompat
            app:icon="@drawable/ic_notification"
            app:key="pref_notification"
            app:defaultValue="true"
            app:summaryOff="@string/pref_notification_off"
            app:summaryOn="@string/pref_notification_on"
            app:title="@string/pref_notification_title" />

        <SwitchPreferenceCompat
            app:icon="@drawable/ic_wifi"
            app:key="pref_wifi"
            app:summaryOff="@string/summary_wifi_off"
            app:summaryOn="@string/summary_wifi_on"
            app:title="@string/title_wifi_only" />

    </PreferenceCategory>

</PreferenceScreen>